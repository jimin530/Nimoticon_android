<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jimin.selfgif">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.intent.action.MEDIA_MOUNTED" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SelectGifActivity"
            android:launchMode="singleInstance" />

        <activity
            android:name=".SelectItemActivity"
            android:launchMode="singleInstance" />

        <activity
            android:name=".SelectPhotoActivity"
            android:launchMode="singleInstance" />

        <activity
            android:name=".Gallery.CustomGalleryActivity"
            android:launchMode="singleInstance" />

        <activity
            android:name=".CropActivity"
            android:launchMode="singleInstance" />

        <activity
            android:name=".PlusActivity"
            android:launchMode="singleInstance" />

        <activity
            android:name=".PopupGifActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:taskAffinity="com.jimin.selfgif.popup"
            android:theme="@style/Theme.Transparent" />

        <activity
            android:name=".PopupMakeGifActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:taskAffinity="com.jimin.selfgif.popupm"
            android:theme="@style/Theme.Transparent" />


        <activity
            android:name=".Camera.CameraViewActivity"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" />

    </application>

</manifest>
